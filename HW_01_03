#Description:	This program takes in two integers from the user.	#
#				It then outputs the sum and product of the two		#
#				integers provided.									#
#####################################################################
*/

#include <stdio.h>

int main(){
	int input1, input2;
	int product;
	int sum;

	printf("Enter two integers to determine their product and sum.\n");
	printf("Enter integer 1: ");
	scanf("%d", &input1);
	printf("Intput 1 = %d \n", input1);
	printf("Enter integer 2: ");
	scanf("%d", &input2);
	printf("Input 2 = %d \n", input2);
	
	product = input1 * input2;
	printf("The product of %d and %d is %d. \n", input1, input2, product);
	
	sum = input1 + input2;
	printf("The sum of %d and %d is %d. \n", input1, input2, sum);
	 
	return 0;
}
